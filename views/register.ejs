<div class="container">
  <h2 style="text-align:center;">Đăng ký</h2>
  <form method="POST" action="/auth/register" style="display:flex; flex-direction:column; align-items:center; gap:15px; max-width:350px; margin:0 auto;">
    <input type="text" name="username" placeholder="Tên đăng nhập" required style="width:100%;">
    <input type="email" name="email" placeholder="Email" required style="width:100%; padding:14px; font-size:1.3rem; border:1.5px solid #ccc; border-radius:6px; margin-bottom:10px;">
    <input type="text" name="phone" placeholder="Số điện thoại" required style="width:100%;">
    <input type="password" name="password" placeholder="Mật khẩu" required style="width:100%;">
    <button type="submit" style="width:100%;">Đăng ký</button>
  </form>
</div>
