<div class="form-container">
  <h2><%= title %></h2>
  <form method="POST" action="<%= supplier ? '/suppliers/api/' + supplier._id + '?_method=PUT' : '/suppliers/api' %>">
    <div class="form-row">
      <div class="form-group">
        <label for="name">Tên nhà cung cấp:</label>
        <input type="text" id="name" name="name" value="<%= supplier ? supplier.name : '' %>" placeholder="Nhập tên nhà cung cấp" required>
      </div>
      
      <div class="form-group">
        <label for="phone">Số điện thoại:</label>
        <input type="tel" id="phone" name="phone" value="<%= supplier ? supplier.phone : '' %>" placeholder="Nhập số điện thoại" pattern="[0-9]{10,11}" required>
      </div>
    </div>
    
    <div class="form-group">
      <label for="address">Địa chỉ:</label>
      <input type="text" id="address" name="address" value="<%= supplier ? supplier.address : '' %>" placeholder="Nhập địa chỉ đầy đủ" required>
    </div>
    
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <i class="btn-icon">💾</i>
        Lưu
      </button>
      <a href="/suppliers" class="btn btn-secondary">
        <i class="btn-icon">❌</i>
        Hủy
      </a>
    </div>
  </form>
</div>
