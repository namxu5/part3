<% if (!Array.isArray(suppliers)) { %>
  <div class="error-container">
    <div class="error-card">
      <i class="error-icon">⚠️</i>
      <h3>Lỗi dữ liệu</h3>
      <p>Dữ liệu không hợp lệ hoặc bạn đang truy cập nhầm API JSON.</p>
      <p>Vui lòng truy cập đúng đường dẫn <span class="highlight">/suppliers</span> để xem giao diện bảng nhà cung cấp.</p>
    </div>
  </div>
<% } else { %>
<div class="suppliers-container">
  <div class="page-header">
    <div class="header-content">
      <h1 class="page-title">
        <i class="title-icon">🏢</i>
        Danh sách nhà cung cấp
      </h1>
      <p class="page-subtitle">Quản lý thông tin các nhà cung cấp</p>
    </div>
    <a href="/suppliers/new" class="add-btn">
      <i class="btn-icon">+</i>
      Thêm nhà cung cấp
    </a>
  </div>

  <% if (suppliers.length === 0) { %>
    <div class="empty-state">
      <div class="empty-icon">🏢</div>
      <h3>Chưa có nhà cung cấp nào</h3>
      <p>Hãy thêm nhà cung cấp đầu tiên để bắt đầu quản lý</p>
      <a href="/suppliers/new" class="empty-btn">Thêm nhà cung cấp ngay</a>
    </div>
  <% } else { %>
    <div class="suppliers-grid">
      <% suppliers.forEach(supplier => { %>
        <div class="supplier-card">
          <div class="card-header">
            <h3 class="supplier-name"><%= supplier.name %></h3>
            <div class="supplier-badge">
              <i class="badge-icon">🏢</i>
              Nhà cung cấp
            </div>
          </div>
          
          <div class="card-body">
            <div class="supplier-info">
              <div class="info-item">
                <span class="info-label">
                  <i class="info-icon">📍</i>
                  Địa chỉ:
                </span>
                <span class="info-value address">
                  <%= supplier.address %>
                </span>
              </div>
              
              <div class="info-item">
                <span class="info-label">
                  <i class="info-icon">📞</i>
                  Điện thoại:
                </span>
                <span class="info-value phone">
                  <%= supplier.phone %>
                </span>
              </div>
            </div>
          </div>
          
          <div class="card-actions">
            <a href="/suppliers/<%= supplier._id %>/edit" class="action-btn edit-btn">
              <i class="btn-icon">✏️</i>
              Sửa
            </a>
            <form method="POST" action="/suppliers/api/<%= supplier._id %>?_method=DELETE" class="delete-form">
              <button type="submit" class="action-btn delete-btn" onclick="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này?')">
                <i class="btn-icon">🗑️</i>
                Xóa
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
<% } %>
